<%= f.nested_fields_for :properties do |property| %>
  <div class="col-md-12 form-group">
    <%= property.label "哪一家銀行" %>
    <%= property.text_field :number , :class => 'form-control text-center' , placeholder: "請輸入銀行名稱" %>
  </div>
  <div class="col-md-12 form-group">
    <%= property.label "戶口類型" %>
    <%= property.text_field :address , :class => 'form-control text-center' , placeholder: "請輸入戶口類型" %>
  </div>
  <div class="form-group col-md-12 form-heir">
    <%= label_tag "資產指定給誰" %> <br>
    <%= render :partial => 'heirs/heir' , :locals => {:f => property} %>
  </div>
  <div class="col-md-12 form-group text-center">
    <%= property.check_box :_destroy %> <br>
    <%= property.label :_destroy , :class => 'border-radius wish-btn' do %>
      <span class="glyphicon glyphicon-minus"></span>移除此資產
    <% end %>
  </div>
<% end %>