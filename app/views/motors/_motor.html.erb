<%= f.nested_fields_for :motors do |motor| %>
  <div class="col-md-12 form-group">
    <%= motor.label "哪一家銀行" %>
    <%= motor.text_field :number , :class => 'form-control text-center' , placeholder: "請輸入銀行名稱" %>
  </div>
  <div class="form-group col-md-12 form-heir">
    <%= label_tag "資產指定給誰" %> <br>
    <%= render :partial => 'heirs/heir' , :locals => {:f => motor} %>
  </div>
  <div class="col-md-12 form-group text-center">
    <%= motor.check_box :_destroy %> <br>
    <%= motor.label :_destroy , :class => 'border-radius wish-btn' do %>
      <span class="glyphicon glyphicon-minus"></span>移除此資產
    <% end %>
  </div>
<% end %>