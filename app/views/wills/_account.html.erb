<%= f.nested_fields_for :accounts do |account| %>
  <div class="col-md-12 form-group">
    <%= account.label "哪一家銀行" %>
    <%= account.text_field :bank , :class => 'form-control text-center' , placeholder: "請輸入銀行名稱" %>
  </div>
  <div class="col-md-12 form-group">
    <%= account.label "戶口類型" %>
    <%= account.text_field :account_type , :class => 'form-control text-center' , placeholder: "請輸入戶口類型" %>
  </div>
  <div class="form-group col-md-12 form-heir">
    <%= label_tag "資產指定給誰" %> <br>
    <%= account.nested_fields_for :heirs do |heir| %>
      <div class="form-heir-select">
        <div class="col-md-3 col-sm-3">
          <%= heir.select(:heir_type, [[ "家屬", "家屬" ], [ "配偶", "配偶" ], [ "朋友" , "朋友" ]]) %>
        </div>
        <div class="col-md-6 col-sm-6">
          <%= heir.text_field :name , :class => "form-control text-center", placeholder: "請輸入接受人的姓名" %>
        </div>
        <div class="col-md-3 col-sm-3">
          <%= heir.text_field :proportion , :class => "form-control text-center heir-number", placeholder: "輸入分配比例" %>
        </div>  
      </div>
    <% end %>
    <div class="col-md-12 text-center wish-heir-btn">
      <%= account.add_nested_fields_link :heirs , :class => "btn"  do %>
        <label class="border-radius wish-btn wish-new"><span class="glyphicon glyphicon-plus"></span>新增接受人</label>
      <% end %>
    </div>
  </div>
  <div class="col-md-12 form-group text-center">
    <%= account.check_box :_destroy %> <br>
    <%= account.label :_destroy , :class => 'border-radius wish-btn' do %>
      <span class="glyphicon glyphicon-minus"></span>移除此資產
    <% end %>
  </div>
<% end %>