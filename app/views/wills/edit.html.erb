<div id="show">
  <div class="container2">
    <%= form_for @will , :url => will_path(@will) , :method => :patch do |f| %>
      <%= f.nested_fields_for :accounts do  |account| %>
         <h1>_________________________________________</h1>
          <div class="col-md-12 form-group">
          <%= account.label "哪一家銀行" %>
          <%= account.text_field :bank , :class => 'form-control text-center' , placeholder: "請輸入銀行名稱" %>
        </div>
        <div class="col-md-12 form-group">
          <%= account.label "戶口類型" %>
          <%= account.text_field :account_type , :class => 'form-control text-center' , placeholder: "請輸入戶口類型" %>
        </div>

        <%= account.nested_fields_for :heirs do |heir| %>
          <div class="form-heir-select">
            <div class="col-md-3 col-sm-3">
              <%= heir.select(:heir_type, [[ "家屬", "家屬" ], [ "配偶", "配偶" ], [ "朋友" , "朋友" ]]) %>
            </div>
            <div class="col-md-6 col-sm-6">
              <%= heir.text_field :name , :class => "form-control text-center", placeholder: "請輸入接受人的姓名" %>
            </div>
            <div class="col-md-3 col-sm-3">
              <%= heir.text_field :proportion , :class => "form-control text-center", placeholder: "輸入分配比例" %>
            </div>  
          </div>
        <% end %>
      <% end %>
      <%= f.submit %>
    <% end %>  
  </div>
</div>
  
