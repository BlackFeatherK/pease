<div id="<%= controller_name %>">
  <div id="<%= action_name %>">
    <div class="user-list">
      <div class="container">
        <div class="user-list-bar">
          <div class="list">總  覽<span class="glyphicon glyphicon-triangle-bottom"></span></div>
          <div class="list">數位資產<span class="glyphicon glyphicon-triangle-bottom"></span></div>
          <div class="list">遺產規劃<span class="glyphicon glyphicon-triangle-bottom"></span></div>
          <div class="list">葬禮安排<span class="glyphicon glyphicon-triangle-bottom"></span></div>
          <div class="list">法律金融<span class="glyphicon glyphicon-triangle-bottom"></span></div>
          <div class="list">健康醫療<span class="glyphicon glyphicon-triangle-bottom"></span></div>
        </div>
      </div>
    </div>

    <div class="user-arrangement">
      <div class="container text-center">
        <div class="row">
          <div class="choose col-md-3 col-sm-12">
            
            <div class="choose-btn">
                <%= image_tag("icon_tangible_assets.png", :alt => "" , :class => "preview" ) %>
                <p>我的有形資產</p>
                <%= link_to will_path(@will), data: { turbolinks: false } do %>
                  <div class="choose-focus"></div>
                <% end %>
              <% if @will.properties.present? || @will.accounts.present? || @will.stock_portfolios.present? || @will.motors.present? || @will.jewelries.present? %>
                  <%= link_to will_path(@will), data: { turbolinks: false } do %>
                    <div class="choose-focus-alternative"> 
                      <div class="circle">
                        <%= image_tag("hover_ok_white.png", :alt => "" , :class => "already-finish" ) %>
                      </div>
                    </div>
                  <% end %>
              <% end %> 
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_intangible_assets.png", :alt => "" , :class => "preview" ) %>
              <p>我的無形資產</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_debt.png", :alt => "" , :class => "preview" ) %>
              <p>債務明細</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_item.png", :alt => "" , :class => "preview" ) %>
              <p>我的物品</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_donation.png", :alt => "" , :class => "preview" ) %>
              <p>捐贈</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_wish.png", :alt => "" , :class => "preview" ) %>
              <p>遺願</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_monument.png", :alt => "" , :class => "preview" ) %>
              <p>紀念碑</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_transfer_digital.png", :alt => "" , :class => "preview" ) %>
              <p>數位資產轉讓</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_funeral.png", :alt => "" , :class => "preview" ) %>
              <p>身後事安排</p>
              <%= link_to will_funeral_path(@will , @will.funeral), data: { turbolinks: false } do %>
                <div class="choose-focus"></div>
              <% end %>
              <% if @will.funeral.present? %>
                <%= link_to will_funeral_path(@will , @will.funeral), data: { turbolinks: false } do %>
                  <div class="choose-focus-alternative"> 
                    <div class="circle">
                      <%= image_tag("hover_ok_white.png", :alt => "" , :class => "already-finish" ) %>
                    </div>
                  </div>
                <% end %>
              <% end %> 
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_digital.png", :alt => "" , :class => "preview" ) %>
              <p>數位帳號</p>
              <%= link_to will_digital_asset_path(@will , @will.digital), data: { turbolinks: false } do %>
                <div class="choose-focus"></div>
              <% end %>
              <% if @will.digital_asset.present? %>
                <%= link_to will_digital_asset_path(@will , @will.digital), data: { turbolinks: false } do %>
                  <div class="choose-focus-alternative"> 
                    <div class="circle">
                      <%= image_tag("hover_ok_white.png", :alt => "" , :class => "already-finish" ) %>
                    </div>
                  </div>
                <% end %>
              <% end %> 
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_pet.png", :alt => "" , :class => "preview" ) %>
              <p>寵物照顧</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_document.png", :alt => "" , :class => "preview" ) %>
              <p>文件檢查</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_unfinish.png", :alt => "" , :class => "preview" ) %>
              <p>未完成的事</p>
              <div class="choose-focus"></div>
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= link_to will_medical_path(@will , @will.medical), data: { turbolinks: false } do %>
                <%= image_tag("icon_treatment.png", :alt => "" , :class => "preview" ) %>
                <p>安寧緩和醫療</p>
              <% end %>
              <% if @will.medical.present? %>
                <%= link_to will_medical_path(@will , @will.medical), data: { turbolinks: false } do %>
                  <div class="choose-focus-alternative"> 
                    <div class="circle">
                      <%= image_tag("hover_ok_white.png", :alt => "" , :class => "already-finish" ) %>
                    </div>
                  </div>
                <% end %>
              <% end %> 
            </div>
          </div>
          <div class="choose col-md-3 col-sm-12">
            <div class="choose-btn">
              <%= image_tag("icon_communication.png", :alt => "" , :class => "preview" ) %>
              <p>醫療溝通</p>
              <div class="choose-focus"></div>
            </div>
          </div>
        </div>
        <%= button_to "立刻加強法律效力", nil,class: "btn btn-default legal-button" %>
      </div>
    </div>
      
  </div>
</div>
    
  