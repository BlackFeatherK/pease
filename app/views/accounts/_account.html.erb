<% if @account.new_record? %>
  <%= form_for @account , :url => will_accounts_path(@will , @account) , :remote => true do |f| %>
    <div class="col-md-12 form-group">
      <%= f.label "哪一家銀行" %>
      <%= f.text_field :bank , :class => 'form-control text-center' , placeholder: "請輸入銀行名稱" %>
    </div>
    <div class="col-md-12 form-group">
      <%= f.label "戶口類型" %>
      <%= f.text_field :account_type , :class => 'form-control text-center' , placeholder: "請輸入戶口類型" %>
    </div>
    <div class="form-group col-md-12 form-heir">
      <%= f.fields_for account.heirs.build do |j| %>
        <%= label_tag('account[heir]', "資產指定給誰") %> <br>
        <div class="form-heir-select">
          <div class="col-md-3 col-sm-3">
            <%= j.select(:heir_type, [[ "家屬", "家屬" ], [ "配偶", "配偶" ], [ "朋友" , "朋友" ]]) %>
          </div>
          <div class="col-md-6 col-sm-6">
            <%= j.text_field :name , :class => "form-control text-center", placeholder: "請輸入接受人的姓名" %>
          </div>
          <div class="col-md-3 col-sm-3">
            <%= j.text_field :proportion , :class => "form-control text-center", placeholder: "輸入分配比例" %>
          </div>  
        </div>
      <% end %>
    </div>
    <div class="col-md-12 form-group text-center">
      <label class="border-radius wish-btn form-heir-btn"><span class="glyphicon glyphicon-plus"></span>新增接受人</label>
    </div>
    <div class="col-md-12 form-group">
      <%= f.submit :class => "submit" %>
    </div>
  <% end %>
